<UserControl x:Class="PWOSparkle.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PWOSparkle"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Name="TabControl" Margin="1" Grid.Row="0" />
        <TextBox Name="InputChatBox" Margin="1" Grid.Row="1" KeyDown="InputChatBox_KeyDown" Background="#FFDFE4EE" />
    </Grid>
</UserControl>
